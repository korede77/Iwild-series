{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    <div class="container" >
        {% for program in programs %}
            <div class="card text-white bg-dark mb-3" style="max-width: 65rem;">
                <div class="card-header"> <h2>{{ loop.index }} - {{ program.title }}</div>
                <div class="card-body">
                    <h5 class="card-title">Catégorie : {{ program.category.name }}</h5>
                    <p class="card-text">{{ program.summary }}</p>
                </div>
            </div>
            {% else %}
            Aucune série trouvée.
        {% endfor %}
    </div>

    <a href="{{ path('app_index') }}">
        <button type="button" class="btn btn-danger">Retour à l'accueil</button>

    </a>
    <a href="{{ path('wild_show', { 'slug': "walking-dead" }) }}">
        <button type="button" class="btn btn-danger">  WALKING DEAD</button>
    </a>
    <br>


{% endblock %}
