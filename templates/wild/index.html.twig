{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    <div class="container" >
        {% for program in programs %}
            <div class="card text-white bg-dark mb-3" style="max-width: 65rem;">
                <div class="card-header">
                    <h2>
                        <a href="{{ path('wild_show', {'slug': program.title|replace({' ': '-'})|lower }) }}"  >
                            {{ loop.index }} - {{ program.title }}
                        </a>
                    </h2>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Catégorie : {{ program.category.name }}</h5>
                    <p class="card-text">{{ program.summary }}</p>
                </div>
            </div>
            {% else %}
            Aucune série trouvée.
        {% endfor %}
    </div>

    <a href="{{ path('app_index') }}">
        <button type="button" class="btn btn-danger">Retour à l'accueil</button>

    </a>
    <br>


{% endblock %}
