{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <div class="card text-white bg-dark mb-3" style="max-width: 50rem;">
                {% for actor in program.actors %}
                    <div class="card-header">
                        <h3> <a href="/wild/actor/{{ actor.id }}">
                                {{ actor.name }}
                            </a>
                        </h3>
                    </div>
                {% else %}
                    <div>Aucun acteur pour cette série</div>
                {% endfor %}
            </div>
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        <button type="button" class="btn btn-danger">  Retour à l'accueil</button>

    </a>
        <a href="{{ path('wild_program', {'slug':"walking-dead"}) }}">
            <button type="button" class="btn btn-danger"> Les saisons</button>
        </a>
{% endblock %}
